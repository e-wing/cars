<label class="form-label dk-aqua">Colors for <%= @car.car_name %></label><br>
<div class="row ">

 <%= hidden_field_tag "car[color_ids][]", nil %>
 <% @sample_colors.each do |sample_color| %>

   <%=   f.check_box :color_ids, {multiple: true}, 1, nil %>
   <%=   f.hidden_field :color_texts, value: sample_color.text %>
   <%=   f.hidden_field :color_glosses, value: sample_color.gloss %>
   <%=   f.label :color_ids, {multiple: true}, value: sample_color.text  %><br>

 <% end %>
</div>

